<hr>
<% @restaurants.each do |restaurant| %>
<%= "#{restaurant.id}: #{restaurant.name} - #{restaurant.address} // #{restaurant.phone_number} - #{restaurant.category}" %> </h2>
<p>
<%= link_to "Edit", edit_restaurant_path(restaurant), method: :get, class: "btn btn-success"%>

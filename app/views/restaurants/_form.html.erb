<%= form_for(@restaurant) do |r| %>
<% if @restaurant.errors.any? %>
<div id="error_explanation">
  <ul>
    <% @restaurant.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>

  </ul>
</div>
<% end %>


<%= r.label :name %>
<%= r.text_field :name %>

<%= r.label :address %>
<%= r.text_field :address %>

<%= r.label :phone_number %>
<%= r.text_field :phone_number %>

<%= r.label :category %>
<%= r.select :category, ["", "chinese", "italian", "japanese", "french", "belgian"] %>
<%= r.submit %>

<% end %>
